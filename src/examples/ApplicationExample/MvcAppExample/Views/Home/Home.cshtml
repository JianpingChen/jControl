@using MvcAppExample.ViewModels
@model AppViewModel

@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@Resources.Strings.AppTitle</title>
	<link type="text/css" id='themelink' href="@Url.Content("~/styles/Themes/WinterAlaska/WinterAlaska.css")" rel="Stylesheet" />
	<link type="text/css" href="@Url.Content("~/styles/app.css")" rel="Stylesheet" />

</head>
<body>
	<header>@Resources.Strings.WelcomeTo</header>
	<div id="applicationContainer" style="height: 490px"></div>
	<script type="text/javascript">
		var applicationSetting = {};
		window.onload = function ()
		{
			applicationSetting.language = '@MvcHtmlString.Create(Model.UserLocale)';
			applicationSetting.version = '@MvcHtmlString.Create(Model.AppVersion)';
			applicationSetting.containerId = 'applicationContainer';
		}
	</script>
<script data-main="@Url.Content("~/scripts/mvcApp.js")" src="@Url.Content("~/scripts/require.js")" type="text/javascript"></script>

@*<script data-main="@Url.Content("~/scripts/build."+@Model.AppVersion+".js")" src="@Url.Content("~/scripts/require.js")" type="text/javascript"></script>
*@

	<footer>
		<a href="" target="_blank">@Resources.Strings.TermOfUse</a>
		<a href="" target="_blank">@Resources.Strings.ContactSupport</a>
	</footer>
</body>
</html>
